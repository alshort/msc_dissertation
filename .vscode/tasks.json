{
    "version":"2.0.0",
    "tasks": [
        {
            "label": "Run pdflatex",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "pdflatex",
            "args": [
                "-interaction=nonstopmode",
                "-file-line-error",
                "*.tex"
            ]
        },
        {
            "label": "Run bibtex",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "bibtex",
            "args": [
                "-terse",
                "*.aux"
            ]
        },
        {
            "label": "Count words",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "texcount",
            "args": [
                "dissertation.tex"
            ],
            "problemMatcher": []
        }
    ]
}